@model KitList.WebUI.Models.BookListViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="table-responsive" style="background-color:#f2f2f2;border-style:outset;">
        <table class="table table-striped table-bordered">
            <tr>
                <td><b>Title</b></td>
                <td><b>Author</b></td>
                <td><b>Publish Year</b></td>
                <td><b>Price</b></td>
                <td></td>
            </tr>
            @foreach (var item in Model.Books)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.PublishYear</td>
                    <td>@item.Price</td>
                    <td>
                        <div class="btn-group btn-group-xs">
                            <a class="btn btn-info" asp-controller="Book" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-primary" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }            
        </table>
    </div>

